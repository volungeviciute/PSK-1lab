<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="SchoolDB" targetRuntime="MyBatis3Simple">
        <jdbcConnection driverClass="org.h2.Driver"
                        connectionURL="jdbc:h2:~/h2database/SchoolDB;AUTO_SERVER=TRUE"
                        userId="school"
                        password="school">
        </jdbcConnection>

        <javaModelGenerator targetPackage="lt.vu.mif.PSK_1lab.mybatis.model" targetProject="MAVEN" />

        <sqlMapGenerator targetPackage="lt.vu.mif.PSK_1lab.mybatis.xml" targetProject="MAVEN" />
        <javaClientGenerator type="XMLMAPPER" targetPackage="lt.vu.mif.PSK_1lab.mybatis.dao" targetProject="MAVEN" />

        <table schema="public" tableName="school">
            <generatedKey column="id" identity="true" sqlStatement="JDBC"/>
        </table>
        <table schema="public" tableName="student">
            <generatedKey column="id" identity="true" sqlStatement="JDBC"/>
        </table>
    </context>
</generatorConfiguration>